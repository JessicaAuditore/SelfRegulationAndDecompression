<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/firstbegin"
        android:alpha="0.8"
>

    <Button
            android:text="登  录"
            android:textSize="28dp"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_button"
            android:id="@+id/login" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="76dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/register" android:layout_marginStart="76dp"/>
    <Button
            android:text="注  册"
            android:textSize="28dp"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_button"
            android:id="@+id/register" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="67dp"
            android:layout_marginLeft="35dp" android:layout_marginStart="35dp"
            app:layout_constraintTop_toBottomOf="@+id/answer" app:layout_constraintStart_toEndOf="@+id/login"/>
    <TextView
            android:text="用户名:"
            android:textColor="@android:color/white"

            android:textSize="35dp"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/textView6"
            android:layout_marginTop="192dp" app:layout_constraintEnd_toEndOf="@+id/textView6"/>
    <TextView
            android:text="密   码："
            android:textColor="@android:color/white"

            android:textSize="35dp"
            android:layout_width="142dp"
            android:layout_height="48dp"
            android:id="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/question" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="65dp" android:layout_marginLeft="31dp" android:layout_marginStart="31dp"
            android:layout_marginBottom="58dp" app:layout_constraintBottom_toTopOf="@+id/login"/>
    <EditText
            android:textColor="@android:color/white"
            android:hint="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/question"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView4" android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:textColor="@android:color/white"
            android:hint="@string/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/answer"
            app:layout_constraintStart_toStartOf="@+id/question" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="忘记密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forget"
            app:layout_constraintBottom_toBottomOf="@+id/register" android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp" android:layout_marginBottom="7dp"
            app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>