<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ImageView
            android:layout_width="wrap_content"

            android:layout_height="140dp"
            android:src="@mipmap/top"
            android:id="@+id/top" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:id="@+id/logo" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent"
            android:text="疗愈音乐"
            android:textSize="30dp"
            android:textStyle="italic"
            android:textColor="@android:color/background_dark"
    />
    <ImageView
            android:layout_width="58dp"
            android:layout_height="27dp"
            android:src="@android:drawable/ic_menu_revert"
            android:id="@+id/returnn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="552dp"
            android:id="@+id/linearLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="148dp"
            app:layout_constraintEnd_toEndOf="parent">
        <ListView
                android:layout_width="185dp"
                android:layout_height="match_parent" android:id="@+id/listView1"/>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/listView2"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>