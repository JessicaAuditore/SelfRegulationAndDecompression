<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/firstbegin"
        android:alpha="0.8"
>
    <EditText
            android:textColor="@android:color/white"
            android:hint="@string/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/answer"
            app:layout_constraintBaseline_toBaselineOf="@+id/answertest"
            app:layout_constraintStart_toEndOf="@+id/answertest" android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:textColor="@android:color/white"
            android:hint="@string/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/question"
            app:layout_constraintBaseline_toBaselineOf="@+id/questiontest"
            app:layout_constraintStart_toEndOf="@+id/questiontest" android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:textColor="@android:color/white"
            android:hint="@string/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/age"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toEndOf="@+id/agetest" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/agetest" android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp"/>
    <EditText
            android:textColor="@android:color/white"
            android:hint="@string/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/sex"
            app:layout_constraintBaseline_toBaselineOf="@+id/sextest" app:layout_constraintStart_toEndOf="@+id/sextest"
            android:layout_marginEnd="41dp" android:layout_marginRight="41dp"
            app:layout_constraintEnd_toEndOf="parent"/>
