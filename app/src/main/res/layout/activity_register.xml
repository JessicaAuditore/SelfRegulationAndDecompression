            android:text="年 龄:"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/agetest"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintEnd_toStartOf="@+id/age"
            android:layout_marginBottom="17dp" app:layout_constraintBottom_toTopOf="@+id/questiontest"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp" android:layout_marginEnd="17dp" android:layout_marginRight="17dp"/>


    <TextView
            android:text="密保问题:"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/questiontest"
            app:layout_constraintTop_toBottomOf="@+id/agetest" app:layout_constraintEnd_toStartOf="@+id/question"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toTopOf="@+id/answertest"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" android:layout_marginEnd="17dp" android:layout_marginRight="17dp"/>

    <TextView
            android:text="答 案:"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/answertest"
            app:layout_constraintTop_toBottomOf="@+id/questiontest" app:layout_constraintEnd_toStartOf="@+id/answer"
            android:layout_marginBottom="211dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="52dp" android:layout_marginStart="52dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"/>
    <EditText
            android:textColor="@android:color/white"
            android:hint="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/question"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:textColor="@android:color/white"
            android:hint="@string/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/answer"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp" app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>