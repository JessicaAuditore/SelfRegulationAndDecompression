    <Button
            android:text="注  册"
            android:textSize="28dp"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_button"
            android:id="@+id/register" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/answer" android:layout_marginTop="296dp"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/answer"/>
    <TextView
            android:text="用户名:"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView4"
            android:layout_marginTop="126dp"
            app:layout_constraintEnd_toStartOf="@+id/question" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView6" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp" android:layout_marginEnd="27dp" android:layout_marginRight="27dp"/>
    <TextView
            android:text="密   码："
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toStartOf="@+id/answer"
            android:layout_marginBottom="77dp" app:layout_constraintBottom_toTopOf="@+id/agetest"
