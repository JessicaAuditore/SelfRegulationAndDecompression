            android:text="性 别:"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:id="@+id/sextest"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/answer" app:layout_constraintEnd_toStartOf="@+id/sex"
            android:layout_marginBottom="39dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="52dp" android:layout_marginStart="52dp"
            app:layout_constraintBottom_toBottomOf="@+id/age" android:layout_marginEnd="17dp"
